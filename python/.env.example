# Loki Configuration
# Copy this file to .env and fill in your actual values
LOKI_URL=https://logs-prod-012.grafana.net
LOKI_USER_ID=your_user_id_here
LOKI_API_KEY=your_api_key_here

# Model Provider Configuration
# Choose "ollama" or "openai"
MODEL_PROVIDER=openai

# OpenAI Configuration (required for MODEL_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
# For Ollama: EMBEDDING_MODEL=nomic-embed-text, LLM_MODEL=llama3.2
# For OpenAI: EMBEDDING_MODEL=text-embedding-3-small, LLM_MODEL=gpt-4o-mini (or gpt-4o, gpt-3.5-turbo)
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0

# Database Configuration
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=ioc_data
K_RESULTS=4
